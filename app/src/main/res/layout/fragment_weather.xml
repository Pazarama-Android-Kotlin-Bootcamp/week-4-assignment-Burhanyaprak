<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherFragment">

    <TextView
        android:id="@+id/textViewCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Istanbul" />

    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCityName"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWeather"
        tools:text="5" />

    <TextView
        android:id="@+id/textViewWeatherNameFirstNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp"
        tools:text="Friday" />

    <ImageView
        android:id="@+id/imageViewFirstNextDay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/texviewDayDegreeFirstNextDay"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/texviewDayDegreeFirstNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/texviewNightDegreeFirstNextDay"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp"
        tools:text="5'" />

    <TextView
        android:id="@+id/texviewNightDegreeFirstNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp"
        tools:text="3'" />

    <ImageView
        android:id="@+id/imageViewSecondNextDay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/texviewDaySecondNextDay"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFirstNextDay"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewWeatherThirdNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeatherNameSecondNextDay"
        tools:text="Friday" />

    <TextView
        android:id="@+id/texviewDayThirdNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/texviewNightThirdNextDay"
        app:layout_constraintTop_toBottomOf="@+id/texviewDaySecondNextDay"
        tools:text="5'" />

    <TextView
        android:id="@+id/texviewNightSecondNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="64dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texviewNightDegreeFirstNextDay"
        tools:text="3'" />

    <TextView
        android:id="@+id/texviewNightThirdNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="64dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texviewNightSecondNextDay"
        tools:text="3'" />

    <TextView
        android:id="@+id/textViewWeatherNameSecondNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeatherNameFirstNextDay"
        tools:text="Friday" />

    <ImageView
        android:id="@+id/imageViewThirdNextDay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/texviewDayThirdNextDay"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSecondNextDay"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/texviewDaySecondNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/texviewNightSecondNextDay"
        app:layout_constraintTop_toBottomOf="@+id/texviewDayDegreeFirstNextDay"
        tools:text="5'" />


</androidx.constraintlayout.widget.ConstraintLayout>